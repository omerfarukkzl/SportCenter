@{
    ViewData["Title"] = "Üye Dashboard";
}

<div class="container py-4">
    <h1 class="mb-4">Hoş Geldiniz</h1>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card member-dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="member-icon bi bi-calendar-event"></i> Katıldığım Programlar</h5>
                </div>
                <div class="card-body text-center">
                    <div class="member-stats">@ViewBag.ProgramCount</div>
                    <p>Toplam Program</p>
                    <a asp-action="MyPrograms" class="btn btn-member mt-2">Programlarım</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card member-dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="member-icon bi bi-list-check"></i> Programa Katıl</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Tüm programları inceleyin ve size uygun olanlara katılın.</p>
                    <a asp-action="Programs" class="btn btn-member">Programları İncele</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card member-dashboard-card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="member-icon bi bi-calendar3"></i> Programlarım</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Program Adı</th>
                                <th>Başlangıç Tarihi</th>
                                <th>Bitiş Tarihi</th>
                                <th>Saat</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var program in Model)
                            {
                                <tr>
                                    <td>@program.ProgramAdi</td>
                                    <td>@program.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>@program.BitisTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>@program.Saat</td>
                                    <td>
                                        <a asp-action="ProgramDetails" asp-route-id="@program.ProgramId" class="btn btn-sm btn-outline-info">Detaylar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Henüz katıldığınız program bulunmamaktadır. <a asp-action="Programs">Programları inceleyerek</a> kayıt olabilirsiniz.
                </div>
            }
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card member-dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="member-icon bi bi-person-badge"></i> Antrenörler</h5>
                </div>
                <div class="card-body">
                    <p>Salon antrenörlerimiz hakkında bilgi alın.</p>
                    <a asp-action="Trainers" class="btn btn-member">Antrenörleri Gör</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card member-dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="member-icon bi bi-tools"></i> Ekipmanlar</h5>
                </div>
                <div class="card-body">
                    <p>Salonda kullanabileceğiniz ekipmanları görüntüleyin.</p>
                    <a asp-action="Equipment" class="btn btn-member">Ekipmanları Gör</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card member-dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="member-icon bi bi-calendar-week"></i> Program Takvimi</h5>
                </div>
                <div class="card-body">
                    <p>Kişisel program takviminizi görüntüleyin.</p>
                    <a asp-action="Schedule" class="btn btn-member">Takvime Git</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap icons ekliyoruz -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
} 