@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="hs-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="~/templates/gymlife/img/hero/hero-1.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 offset-lg-6">
                        <div class="hi-text">
                            <span>Forma Girin</span>
                            <h1>Sağlıklı <strong>Yaşam</strong> İçin</h1>
                            <p>Profesyonel ekibimiz ve modern ekipmanlarımızla size özel programlar sunuyoruz.</p>
                            <a href="#" class="primary-btn">Daha Fazla Bilgi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hs-item set-bg" data-setbg="~/templates/gymlife/img/hero/hero-2.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 offset-lg-6">
                        <div class="hi-text">
                            <span>Güçlü Olun</span>
                            <h1>Güçlü Bir <strong>Vücut</strong> İçin</h1>
                            <p>Size özel hazırlanmış programlarla hedeflerinize ulaşın.</p>
                            <a href="#" class="primary-btn">Daha Fazla Bilgi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->

<!-- ChoseUs Section Begin -->
<section class="choseus-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Neden Biz?</span>
                    <h2>AYRICALIKLI HİZMETLER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="cs-item">
                    <span class="flaticon-034-stationary-bike"></span>
                    <h4>Modern Ekipmanlar</h4>
                    <p>En son teknoloji spor ekipmanlarıyla çalışın.</p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="cs-item">
                    <span class="flaticon-033-juice"></span>
                    <h4>Sağlıklı Beslenme</h4>
                    <p>Uzman diyetisyenlerimizden beslenme programı alın.</p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="cs-item">
                    <span class="flaticon-002-dumbell"></span>
                    <h4>Özel Programlar</h4>
                    <p>Size özel hazırlanmış antrenman programları.</p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="cs-item">
                    <span class="flaticon-014-heart-beat"></span>
                    <h4>Uzman Eğitmenler</h4>
                    <p>Deneyimli ve profesyonel eğitmenlerle çalışın.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ChoseUs Section End -->

