@model SportCenter.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h4>Spor Merkezi Yönetim Paneli</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Hoş geldiniz! Bu panelden spor merkezinin tüm işlemlerini yönetebilirsiniz.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Toplam Üye</p>
                                <h5 class="font-weight-bolder">@Model.UyeSayisi</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                                <i class="fas fa-users text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Toplam Antrenör</p>
                                <h5 class="font-weight-bolder">@Model.AntrenorSayisi</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                                <i class="fas fa-user-tie text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Toplam Program</p>
                                <h5 class="font-weight-bolder">@Model.ProgramSayisi</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                                <i class="fas fa-dumbbell text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Toplam Ekipman</p>
                                <h5 class="font-weight-bolder">@Model.EkipmanSayisi</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-info shadow-info text-center rounded-circle">
                                <i class="fas fa-weight-hanging text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Aktif Program</p>
                                <h5 class="font-weight-bolder">@Model.AktifProgramSayisi</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                                <i class="fas fa-calendar-check text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Bakımdaki Ekipman</p>
                                <h5 class="font-weight-bolder">@Model.BakimdakiEkipmanSayisi</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                                <i class="fas fa-tools text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between">
                        <h6>Hızlı Erişim</h6>
                    </div>
                </div>
                <div class="card-body pt-4 pb-3">
                    <div class="row">
                        <div class="col-md-3 col-sm-6 mb-4">
                            <a href="@Url.Action("Users", "Admin")" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-users me-2"></i> Kullanıcı Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <a href="@Url.Action("Trainers", "Admin")" class="btn btn-info btn-lg w-100">
                                <i class="fas fa-user-tie me-2"></i> Antrenör Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <a href="@Url.Action("Programs", "Admin")" class="btn btn-warning btn-lg w-100">
                                <i class="fas fa-dumbbell me-2"></i> Program Yönetimi
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <a href="@Url.Action("Equipment", "Admin")" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-weight-hanging me-2"></i> Ekipman Yönetimi
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap icons ekliyoruz -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
} 