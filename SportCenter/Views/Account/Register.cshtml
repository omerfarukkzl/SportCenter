@model SportCenter.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "_AccountLayout";
}

<div class="account-form">
    <h2>Yeni Üye Kaydı</h2>
    
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label for="Ad">Ad</label>
            <input type="text" class="form-control" id="Ad" name="Ad" required>
        </div>
        
        <div class="form-group">
            <label for="Soyad">Soyad</label>
            <input type="text" class="form-control" id="Soyad" name="Soyad" required>
        </div>
        
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required>
        </div>
        
        <div class="form-group">
            <label for="Sifre">Şifre</label>
            <input type="password" class="form-control" id="Sifre" name="Sifre" required>
        </div>
        
        <div class="form-group">
            <label for="SifreTekrar">Şifre Tekrar</label>
            <input type="password" class="form-control" id="SifreTekrar" name="SifreTekrar" required>
        </div>
        
        <div class="form-group">
            <label for="Telefon">Telefon</label>
            <input type="tel" class="form-control" id="Telefon" name="Telefon">
        </div>
        
        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </form>
    
    <div class="account-links">
        <p>Zaten hesabınız var mı? <a asp-controller="Account" asp-action="Login">Giriş Yapın</a></p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 