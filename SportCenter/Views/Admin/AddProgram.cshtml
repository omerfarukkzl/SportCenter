@model SportCenter.Models.SporProgrami
@{
    ViewData["Title"] = "Program Ekle";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h4>Yeni Program Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AddProgram" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="ProgramAdi" class="form-control-label"></label>
                                    <input asp-for="ProgramAdi" class="form-control" />
                                    <span asp-validation-for="ProgramAdi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="BaslangicTarihi" class="form-control-label"></label>
                                    <input asp-for="BaslangicTarihi" class="form-control" type="date" />
                                    <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="BitisTarihi" class="form-control-label"></label>
                                    <input asp-for="BitisTarihi" class="form-control" type="date" />
                                    <span asp-validation-for="BitisTarihi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProgramSaati" class="form-control-label"></label>
                                    <input asp-for="ProgramSaati" class="form-control" type="time" />
                                    <span asp-validation-for="ProgramSaati" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AntrenorId" class="form-control-label">Antrenör</label>
                                    <select asp-for="AntrenorId" class="form-control" asp-items="@(new SelectList(ViewBag.Antrenorler, "Id", "AdSoyad"))">
                                        <option value="">Antrenör seçiniz</option>
                                    </select>
                                    <span asp-validation-for="AntrenorId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="AktifMi" checked />
                            <label class="form-check-label" asp-for="AktifMi"></label>
                        </div>
                        <div class="form-group mt-4 text-end">
                            <a asp-action="Programs" class="btn btn-secondary me-2">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 